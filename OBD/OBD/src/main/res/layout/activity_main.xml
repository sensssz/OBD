<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/first_view"
        android:id="@+id/firstViewButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/second_view"
        android:id="@+id/secondViewButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/firstViewButton"
        android:layout_marginTop="30dp"
       />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/third_view"
        android:id="@+id/thirdViewButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/secondViewButton"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/forth_view"
        android:id="@+id/forthViewButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/thirdViewButton"
        android:layout_marginTop="30dp"
         />
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/fifth_view"
        android:id="@+id/fifthViewButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forthViewButton"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>